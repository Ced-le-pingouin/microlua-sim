## go to MLS root dir (doesn't work if script was started from PATH)
OLD_DIR=$PWD
SCRIPT_DIR=$(dirname $0)
cd $SCRIPT_DIR/..

./scripts/compile
./scripts/package-src

## back to original dir
cd $OLD_DIR
