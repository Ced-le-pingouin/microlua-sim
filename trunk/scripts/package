OLD_DIR=$PWD
SCRIPT_DIR=$(dirname $0)
cd $SCRIPT_DIR/..

VERSION=`cat VERSION`
OS_DIR="os_specific"
COMMON_FILES="mls.lua mls.comp.lua mls.ini.dist icon.png about.png README README-FR CHANGES CHANGES-FR COPYING"
IMAGE_FILES="clp/mls/images/keyboard/*"
TMP_DEST_DIR="__mls_tmp_dir"
for OS in linux win mac; do
    OS_SRC_DIR="$OS_DIR/$OS"
    OS_DEST_DIR="$TMP_DEST_DIR/$OS"
    
    mkdir -p $OS_DEST_DIR
    cp $COMMON_FILES $OS_DEST_DIR
    cp $IMAGE_FILES $OS_DEST_DIR
    cp -r $OS_SRC_DIR/* $OS_DEST_DIR
    
    find $TMP_DEST_DIR -name '.svn' -type d -prune -exec rm -fR {} \;
    
    ARCHIVE_NAME="mls-$VERSION-$OS.zip"
    
done

rm -fR "$TMP_DEST_DIR"

cd $OLD_DIR
